{
    "manifest_version": 3,
    "name": "Virtual Closet",
    "version": "1.0",
    "description": "A smart wardrobe extension that helps you create outfits.",
    "action": {
        "default_popup": "index.html"
      },
    "background": {
      "service_worker": "background.js"
    },
    "permissions": ["storage", "activeTab", "scripting"],
    "host_permissions": ["*://*/*"]
  }